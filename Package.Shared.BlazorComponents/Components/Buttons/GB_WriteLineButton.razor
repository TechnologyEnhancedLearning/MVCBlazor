@using System.Diagnostics
@inherits GB_ComponentBase


<GB_Button 
    ButtonType="@ButtonType"
    ButtonText="@($"Write to console {TextToPrintToConsole}")"
    ActionUrl="ActionURL" 
    FormData=@(new Dictionary<string, string>()) 
    AssistiveText="Button"  
    ToolTipTitle="Title" 
    AriaLabel="AriaLabel" 
    OnClick="HandleClick"/>



@code {
    [Parameter]
    public GB_ButtonType ButtonType { get; set; } = GB_ButtonType.Danger;

    [EditorRequired]
    [Parameter]
    public string TextToPrintToConsole { get; set; }



    private async Task HandleClick()
    {
        // This will log the text to the console
        Console.WriteLine(TextToPrintToConsole);
        //Output window
        Debug.WriteLine(TextToPrintToConsole);
    }
}



